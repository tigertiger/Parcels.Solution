@using Parcels.Models;

<h1>"The Post Office"</h1>

@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Mail mail in Model)
  {
    <li>@mail.Description 
      <ul>
        <li>Parcel Weight: @mail.Weight kg</li>
        <li>Parcel Dimensions: @mail.Length in x @mail.Width in x @mail.Height in</li>
        <li>Parcel Volume: @mail.Volume</li>
      </ul>
    </li>
    <li>Cost to Ship: $@mail.CostToShip</li>
  }
</ul>
<a href="/"><button class="btn btn-info">Ship Another Parcel</button></a>